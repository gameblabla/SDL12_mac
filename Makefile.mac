	src/events/SDL_mouse.c \
	src/events/SDL_quit.c \
	src/events/SDL_resize.c \
	src/cpuinfo/SDL_cpuinfo.c \
	src/main/macos/SDL_main.c \
	src/timer/macos/FastTimes.c \
	src/timer/macos/SDL_MPWtimer.c \
